{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug - MinGW",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "sourceFileMap": {
                "/mnt/c": "C:/",
                "/usr/include/c++": "C:/MinGW/lib/gcc/mingw32/8.2.0/include/c++"
            },
            "externalConsole": false
        }
    ]
}
